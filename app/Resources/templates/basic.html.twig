<html>
<head>
  <link rel="stylesheet" href="./assets/reveal.js/css/reveal.css">
  <link rel="stylesheet" href="./assets/reveal.js/css/theme/black.css" id="theme">
</head>
<body>
<div class="reveal">
  <div class="slides">
    <section>
      <h1>{{ pres.getTitle }}</h1>
      Single Horizontal Slide</section>
    {% for sec in pres.getSections %}
      <section>
        {% if sec.getTitle %}
        <h1>{{ sec.getTitle }}</h1>
        {% endif %}
        {% if sec.getImg %}
          <img src="imgs/{{ sec.getImg }}">
        {% endif %}
        {% if sec.getType == 'list' %}
        <ul>
          {% for cont  in sec.getContent %}
            <li>{{ cont }}</li>
          {%  endfor %}
        </ul>
        {% else %}
          {{ sec.getContent }}
        {% endif %}
      </section>
    {% endfor %}
  </div>
</div>

<script src="./assets/reveal.js/lib/js/head.min.js"></script>
<script src="./assets/reveal.js/js/reveal.js"></script>

<script>

  // Full list of configuration options available at:
  // https://github.com/hakimel/reveal.js#configuration
  Reveal.initialize({
    controls: true,
    progress: true,
    history: true,
    center: true,

    transition: 'slide', // none/fade/slide/convex/concave/zoom

    // Optional reveal.js plugins
    dependencies: [
    ]
  });

</script>
</body>
</html>
