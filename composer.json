{
    "autoload": {
        "psr-4": {
            "Msg\\": "src/"
        }
    },

    "require": {
        "symfony/console": "^2.0",
        "twig/twig": "^1.23",
        "league/flysystem": "^1.0",
        "symfony/yaml": "^2.0"
    },
    "require-dev": {
        "behat/behat": "^3.0",
        "behat/mink-extension": "^2.1",
        "behat/mink-goutte-driver": "~1.2"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "scripts": {
        "post-install-cmd": [
            "@bowerInstall"
        ],
        "post-update-cmd": [
            "@bowerInstall"
        ],
        "bowerInstall": [
            "bower install"
        ],
        "generate": [
            "./app/generate.php presentation:dump"
        ],
        "test": [
            "@generate",
            "bin/behat"
        ]
    }
}
