{
    "name": "CH Test",
    "description": "Presentation test project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Msg\\": "src/"
        }
    },

    "require": {
        "php": ">=7.0.0",
        "symfony/console": "^2.0",
        "twig/twig": "^1.23",
        "league/flysystem": "^1.0",
        "symfony/yaml": "^2.0"
    },
    "require-dev": {
        "behat/behat": "^3.0",
        "behat/mink-extension": "^2.1",
        "behat/mink-goutte-driver": "~1.2",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.4"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "scripts": {
        "bowerInstall": [
            "bower install"
        ],
        "generate": [
            "./app/generate.php presentation:dump"
        ],
        "phpunit": [
            "bin/phpunit"
        ],
        "behat": [
            "bin/behat"
        ],
        "checkstyle": [
            "bin/phpcs --standard=PSR2 src/"
        ],
        "test": [
            "@generate",
            "@phpunit",
            "@behat",
            "@checkstyle"
        ]
    }
}
